<div>
  <div class="row bgForm">
    <% @albums.each do |album| %>
      <div class="col-md-3 col-xs-3 bgDivTest">

        <img></img>
        <div class="row">
          <div class="sizeText">
            <%= album.title %>
          </div>
        </div>
        <div class="row">
          <div class="sizeText">
            <%= album.desc %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-xs-2 col-md-offset-3 col-xs-offset-3 setMargin">
            <%= link_to 'edit', edit_album_path(album) %>
          </div>
          <div class="col-md-2 col-xs-2 setMargin">
            <%= link_to 'Show', album_path(album) %>
          </div>
          <div class="col-md-2 col-xs-2 setMargin">
            <%= link_to 'delete', album_path(album) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-offset-5 col-xs-offset-5 col-xs-2 col-md-2">

      <%= link_to 'New Album', new_album_path %>
    </div>

  </div>

</div>


